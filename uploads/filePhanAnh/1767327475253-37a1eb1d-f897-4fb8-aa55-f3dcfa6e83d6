import 'dart:convert';
import 'package:http/http.dart' as http;
class NewsItem {
  final String title;
  final String thumbnail;
  final String shortDesc;
  final String content;
  final String url;

  NewsItem({
    required this.title,
    required this.thumbnail,
    required this.shortDesc,
    required this.content,
    required this.url,
  });

  factory NewsItem.fromJson(Map<String, dynamic> json) {
    return NewsItem(
      title: json['title'] ?? 'Không có tiêu đề',
      // SỬA Ở ĐÂY: GNews dùng key 'image', không phải 'urlToImage'
      thumbnail: json['image'] ?? '', 
      shortDesc: json['description'] ?? 'Không có mô tả',
      content: json['content'] ?? 'Không có nội dung chi tiết',
      url: json['url'] ?? '',
    );
  }
}

class NewsApi {
  static const String apiUrl = "https://gnews.io/api/v4/top-headlines?category=general&lang=vi&country=vn&apikey=d42a6ac494669732941e837ad3c76c2d";

  static Future<List<NewsItem>> fetchNews() async {
    final response = await http.get(Uri.parse(apiUrl));

    if (response.statusCode == 200) {
      final jsonBody = json.decode(response.body);
      final List articles = jsonBody["articles"];
      return articles.map((e) => NewsItem.fromJson(e)).toList();
    } else {
      throw Exception("Lỗi tải dữ liệu: ${response.statusCode}");
    }
  }
}